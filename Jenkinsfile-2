pipeline {
  agent any
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('private-key') 
  }
  stages {
    stage('Hello') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'Ansible', inventory: '/root/ansible/dev.inv.yml', playbook: 'ansible-play.yml'
      }
    }
  }
}
