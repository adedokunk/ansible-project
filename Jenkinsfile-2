pipeline {
  agent any
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('ansibleID') 
  }
  stages {
    stage('Hello') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i inventory.yml --private-key=$ANSIBLE_PRIVATE_KEY playbooks/ansible-play.yml'
      }
    }
  }
}
